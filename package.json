{
  "name": "web-verse",
  "version": "0.4.0",
  "description": "dynamic paragraph-specific anchor links",
  "main": "dist/index.js",
  "scripts": {
    "build-node": "rm -rf dist && babel src --out-dir dist",
    "build-browser": "browserify src/index.js | uglifyjs - -c warnings=false -m > web-verse.min.js",
    "show-build": "browserify --deps src/index.js",
    "build": "npm run build-node && npm run build-browser",
    "watch-node": "nodemon -e js -w src/ --exec 'npm run build-node'",
    "watch-browser": "watchify src/index.js -o 'uglifyjs - -c warnings=false -m > web-verse.min.js'",
    "watch": "concurrent --kill-others --prefix command 'npm run watch-node' 'npm run watch-browser'",
    "test": "karma start karma.conf-ci.js",
    "test-local": "karma start karma.conf.js",
    "pretest": "npm run build",
    "prepublish": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/scienceai/web-verse.git"
  },
  "keywords": [
    "deep",
    "linking",
    "hyperlink"
  ],
  "contributors": [
    "Sebastien Ballesteros",
    {
      "name": "Robin Berjon",
      "email": "robin@science.ai",
      "url":  "http://berjon.com/"
    }
  ],
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/scienceai/web-verse/issues"
  },
  "homepage": "https://github.com/scienceai/web-verse",
  "dependencies": {
    "escape-regex-string": "1.0.4",
    "fast-levenshtein": "1.0.7",
    "sbd": "1.0.1",
    "shortid": "2.2.2",
    "spark-md5": "1.0.0",
    "uuid": "2.0.1"
  },
  "devDependencies": {
    "babel": "5.8.23",
    "babel-core": "5.8.25",
    "babel-eslint": "4.1.3",
    "babelify": "6.3.0",
    "browserify": "11.2.0",
    "chai": "3.3.0",
    "chalk": "1.1.1",
    "concurrently": "0.1.1",
    "eslint": "1.5.1",
    "jsdom": "6.5.1",
    "karma": "0.13.10",
    "karma-chai": "0.1.0",
    "karma-chrome-launcher": "0.2.0",
    "karma-coverage": "0.5.2",
    "karma-coveralls": "1.1.2",
    "karma-firefox-launcher": "0.1.6",
    "karma-mocha": "0.2.0",
    "karma-safari-launcher": "0.1.1",
    "karma-sauce-launcher": "0.2.14",
    "mocha": "2.3.3",
    "nodemon": "1.7.1",
    "uglify-js": "^2.4.24",
    "watchify": "^3.0.4"
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  }
}
